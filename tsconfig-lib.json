{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "exclude": ["app/**/*.spec.ts", "app/**/*.spec.tsx", "node_modules"],
  "include": ["app/**/*.js", "app/**/*.jsx", "app/**/*.ts", "app/**/*.tsx"]
}
